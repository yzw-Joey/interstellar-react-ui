{
  "compilerOptions": {
    "target": "ES2015",
    "baseUrl": "./",
    "outDir": "lib",
    "sourceMap": true,
    "allowJs": true,
    "module": "es6",
    "lib": [
      "es7",
      "dom"
    ],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "jsx": "react",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "strictNullChecks": false,
    "strict": true
  },
  "include": [
    "**/*.tsx",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/CalendarTest"
  ]
}